# Environment
NODE_ENV=development

# Security - API Key Authentication
API_KEY=your-secret-api-key-change-this-in-production

# Server Configuration
PORT=5003
HOST=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
USE_REDIS=false

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3




# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration (SMTP)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@ethereal.email
EMAIL_PASSWORD=your-password
EMAIL_FROM=noreply@otpservice.com

# SMS Configuration (Future)
SMS_PROVIDER=mock
SMS_API_KEY=
SMS_API_SECRET=

# Logging
LOG_LEVEL=info
