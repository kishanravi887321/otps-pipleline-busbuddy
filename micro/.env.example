# Environment
NODE_ENV=development

# Security - API Key Authentication
API_KEY=your-secret-api-key-change-this-in-production

# Server Configuration
PORT=5003
HOST=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
USE_REDIS=false

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3




# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration
EMAIL_PROVIDER=brevo  # Options: smtp, brevo, ses
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@busbuddy.com

# Brevo (Sendinblue) Configuration
BREVO_API_KEY=your-brevo-api-key-here

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Note: EMAIL_PASSWORD and EMAIL_FROM are typically configured at the general EMAIL_CONFIGURATION level
# or specifically for SES if different from the general settings.
# The following lines might be redundant if EMAIL_FROM is already defined above.
# EMAIL_PASSWORD=your-password # This might be for SMTP, not SES directly
# EMAIL_FROM=noreply@otpservice.com # This would override the general EMAIL_FROM

# SMS Configuration (Future)
SMS_PROVIDER=mock
SMS_API_KEY=
SMS_API_SECRET=

# Logging
LOG_LEVEL=info
